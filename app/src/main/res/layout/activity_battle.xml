<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".BattleActivity"
    android:fillViewport="true">
<!-- 대결신청 레이아웃 큰틀! -->

    <LinearLayout
        android:id="@+id/ll_battlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="대결 신청"
            android:textColor="@color/black"
            android:textSize="10pt" />

        <!-- 대결신청_상대 id 입력 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="상대ID : "
                android:textSize="10pt" />

            <EditText
                android:id="@+id/battleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 대결신청_대결일 검색 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대결일 : "
                android:textSize="10pt" />

            <Spinner
                android:id="@+id/battleSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/battleRequest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/bg_blue"
            android:text="대결하기" />
    </LinearLayout>

        <!-- 대결현황 레이아웃 큰틀! -->

    <LinearLayout
        android:id="@+id/ll_resultlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="대결 현황"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:elevation="10dp"/>

            <!-- 대결 일정 정보-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="693dp"
            android:orientation="vertical">

            <!-- 스크롤뷰 자식 레이아웃 (의미는 없지만 필요한 레이아웃. 삭제는 ㄴㄴ) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/radius_back4_gray"
                    android:backgroundTint="@color/bg_white"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <!--대결시작일-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대결 시작일 : "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_resultStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- 대결 마감일 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대결 마감일 : "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_resultEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이용자 ID : "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_myId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="상대방 ID : "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_resultId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 이용자의 진행상황 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="나의 진행상황"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/radius_back4_gray"
                        android:backgroundTint="@color/bg_white"
                        android:elevation="10dp"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/myPointBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:max="1000"
                            android:progressBackgroundTint="#a1a0a1"
                            android:progressTint="#32c929"
                            android:visibility="gone" />

                        <org.eazegraph.lib.charts.BarChart
                            android:id="@+id/tab1_chart_1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:egBarWidth="20dp"
                            app:egFixedBarWidth="true"
                            app:egLegendHeight="40dp" />
                    </LinearLayout>

                </LinearLayout>
                <!-- 상대방의 진행상황 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="상대방 진행상황"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/radius_back4_gray"
                        android:backgroundTint="@color/bg_white"
                        android:elevation="10dp"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/opPointBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:max="1000"
                            android:progressBackgroundTint="#a1a0a1"
                            android:progressTint="#bc252b"
                            android:visibility="gone" />

                        <org.eazegraph.lib.charts.BarChart
                            android:id="@+id/tab1_chart_2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:egBarWidth="20dp"
                            app:egFixedBarWidth="true"
                            app:egLegendHeight="40dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
